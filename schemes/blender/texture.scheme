[scheme]
processor = blender -b -P scripts/export_texture.py
index = 11

[downscale]
display = downscale
type = uint32
min = 1
default = 1

[degamma_on]
display = allow degamma
hint = allow offline preprocessing to linearize values
type = bool
default = false

[degamma_coef]
require = degamma_on
display = degamma coeficient
hint = gamma coeficient used during creation of this texture
type = real
min = 1.8
max = 2.6
default = 2.2
